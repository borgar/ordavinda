{
  "include": [ "src/**/*" ],
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2022",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "outDir": "types",
    "declarationMap": false
  }
}
